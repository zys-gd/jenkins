node {
	def WORKSPACE = pwd()
	def props = readProperties file: "${WORKSPACE}/prod/environment/.properties"
	params = []
	props.each { key, value ->
		params += [
            string(name: "$key", defaultValue: "$value", description: ''),
        ]
	}
	properties([
        parameters(params)
    ])

}


pipeline {
	agent any

    stages {
        stage ('Update .env') {
            steps {
                script {
					params.each {key, value ->
					  println "${key} -> ${value} "
					}
				}
			}
        }
    }
}
